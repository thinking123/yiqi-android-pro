<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- 填充的颜色 -->
    <solid android:color="@color/color_f7f8" />
    <stroke
        android:dashGap="0dp"
        android:width="1dp"
        android:color="@color/color_e3e3" />

    <!-- 设置按钮的四个角为弧形 -->
    <!-- android:radius 弧形的半径 -->
    <corners android:radius="5dip" />

    <!-- padding：Button里面的文字与Button边界的间隔 -->
    <padding
        android:left="5dp"
        android:top="3dp"
        android:right="5dp"
        android:bottom="3dp"/>

</shape>