<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/normal_back_ground"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/gray_f4f5" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_height"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingRight="12dp">


            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_left_right"
                android:layout_weight="1"
                android:text="乐挺官方旗舰店"
                android:textColor="@color/text_black_33"
                android:textSize="@dimen/text_normal" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_left_right"
                android:text="等待商家处理"
                android:textColor="@color/red"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_f4f5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/margin_left_right">

        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bt_shape_edit" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="5dp">

            <TextView
                android:id="@+id/tv_product_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_toLeftOf="@id/tv_count"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="商品名称"
                android:textColor="@color/text_black_33"
                android:textSize="@dimen/text_normal" />

            <TextView
                android:id="@+id/tv_product_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="12dp"
                android:layout_toLeftOf="@id/tv_money"
                android:text="商品详情"
                android:textColor="@color/text_black_99"
                android:textSize="14sp"
                android:visibility="gone" />


            <TextView
                android:id="@+id/tv_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="22dp"
                android:layout_marginBottom="12dp"
                android:paddingRight="16dp"
                android:text="88.00"
                android:textColor="@color/color_3333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="12dp"
                android:layout_toLeftOf="@+id/tv_product_price"
                android:gravity="bottom"
                android:text="¥"
                android:textColor="@color/color_3333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="6dp"
                android:layout_marginEnd="@dimen/margin_left_right"
                android:text=""
                android:textColor="@color/text_black_33"
                android:textSize="@dimen/text_normal" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="@dimen/margin_left_right"
        android:gravity="end"
        android:paddingTop="16dp"
        android:paddingRight="10dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/all_price_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="16dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="总价："
            android:textColor="@color/text_black_33"
            android:textSize="@dimen/text_normal" />

        <TextView
            android:id="@+id/all_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:paddingTop="2dp"
            android:paddingEnd="10dp"
            android:paddingBottom="2dp"
            android:text="¥288"
            android:textColor="@color/red"
            android:textSize="@dimen/text_normal" />

        <TextView
            android:id="@+id/tv_process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_normal"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_circle_black"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingTop="2dp"
            android:paddingEnd="10dp"
            android:paddingBottom="2dp"
            android:text="处理售后"
            android:textColor="@color/text_black_33"
            android:textSize="@dimen/text_normal" />

        <TextView
            android:id="@+id/tv_back_goods"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_normal"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_circle_black"
            android:gravity="center"
            android:paddingStart="3dp"
            android:paddingTop="2dp"
            android:paddingEnd="3dp"
            android:paddingBottom="2dp"
            android:text="退货"
            android:textColor="@color/text_black_33"
            android:textSize="@dimen/text_normal" />

        <TextView
            android:id="@+id/tv_refund"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_normal"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_circle_black"
            android:gravity="center"
            android:paddingStart="3dp"
            android:paddingTop="2dp"
            android:paddingEnd="3dp"
            android:paddingBottom="2dp"
            android:text="再次退款"
            android:textColor="@color/text_black_33"
            android:textSize="@dimen/text_normal" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_normal"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_circle_red"
            android:gravity="center"
            android:paddingStart="3dp"
            android:paddingTop="2dp"
            android:paddingEnd="3dp"
            android:paddingBottom="2dp"
            android:text="联系平台"
            android:textColor="@color/red"
            android:textSize="@dimen/text_normal" />

        <TextView
            android:id="@+id/tv_look"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_normal"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_circle_red"
            android:gravity="center"
            android:paddingStart="3dp"
            android:paddingTop="2dp"
            android:paddingEnd="3dp"
            android:paddingBottom="2dp"
            android:text="查看物流"
            android:visibility="gone"
            android:textColor="@color/red"
            android:textSize="@dimen/text_normal" />

        <TextView
            android:id="@+id/tv_confirm_receive"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_normal"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_circle_black"
            android:gravity="center"
            android:paddingStart="3dp"
            android:paddingTop="2dp"
            android:paddingEnd="3dp"
            android:paddingBottom="2dp"
            android:text="确认到账"
            android:textColor="@color/text_black_33"
            android:textSize="@dimen/text_normal" />


        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_normal"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_circle_red"
            android:gravity="center"
            android:paddingStart="3dp"
            android:paddingTop="2dp"
            android:paddingEnd="3dp"
            android:paddingBottom="2dp"
            android:text="查看详情"
            android:visibility="gone"
            android:textColor="@color/red"
            android:textSize="@dimen/text_normal" />

    </LinearLayout>
</LinearLayout>