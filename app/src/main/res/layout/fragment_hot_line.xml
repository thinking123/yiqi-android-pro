<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_height"
        android:elevation="@dimen/normal_elevation_height"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:id="@+id/toolbar_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="start">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="10dp"
                android:adjustViewBounds="true"
                android:visibility="gone"
                android:src="@drawable/icon_back_black" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="官方热线"
            android:textColor="@color/text_black_33"
            android:textSize="@dimen/text_title"
            />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/gray_fc"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:text="一器商城官方客服热线"
            android:textColor="@color/text_black_33"
            android:textSize="21sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title1"
            android:text="咨询热线"
            android:textColor="@color/text_black_33"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/phone1"
            android:text="400-0357-1234"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_call_one"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"

            android:text="立即拨号"
            android:theme="@style/LoginButtonTheme"
            android:drawableLeft="@drawable/phoneon"
            android:drawablePadding="0dp"
            android:textSize="16sp" />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title2"
            android:text="上门服务"
            android:textColor="@color/text_black_33"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/phone2"
            android:text="400-0357-1234"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_call_two"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"

            android:text="立即拨号"
            android:theme="@style/LoginButtonTheme"
            android:drawableLeft="@drawable/phoneon"
            android:drawablePadding="0dp"
            android:textSize="16sp" />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title3"
            android:text="投诉电话"
            android:textColor="@color/text_black_33"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/phone3"
            android:text="400-0357-1234"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_call_three"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"

            android:text="立即拨号"
            android:theme="@style/LoginButtonTheme"
            android:drawableLeft="@drawable/phoneon"
            android:drawablePadding="0dp"
            android:textSize="16sp" />


    </LinearLayout>




</LinearLayout>