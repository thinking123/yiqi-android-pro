<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.angmarch.views.NiceSpinner
        android:id="@+id/nice_spinner_cat"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        app:arrowTint="@color/color_3333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:textTint="@color/color_3333" />

    <org.angmarch.views.NiceSpinner
        android:id="@+id/nice_spinner_sub"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:arrowTint="@color/color_3333"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nice_spinner_cat"
        app:layout_constraintTop_toTopOf="@+id/nice_spinner_cat"
        app:textTint="@color/color_3333" />

</android.support.constraint.ConstraintLayout>